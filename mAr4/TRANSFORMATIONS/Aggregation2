var weo = Knoema.UseDataset("WEO");
weo.LoadData();
foreach (var indicator in weo.Dimensions["Indicator"]["BCA", "NGDP_R"])
{
	var list = GetTimeSeriesList();
	foreach (var country in weo.Dimensions["Country"])
	{
		if (country != "world")
		{
			list.Add(weo[country, indicator]);
		}
	}
	weo["world", indicator] = Aggregation(AggregationType.Sum, list);
	weo["world", indicator, "units"] = "U.S. Dollars";
	weo["world", indicator, "scale"] = 1000000000;
}
weo.SaveData(SaveOptions.Update);