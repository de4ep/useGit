var weo = Knoema.UseDataset("WEO");
weo.LoadData(weo.Dimensions["Indicator"]["NGDP_R"]);
var list = GetTimeSeriesList();
foreach (var country in weo.Dimensions["Country"])
{
	if (country != "world")
	{
		list.Add(weo[country, "ngdp_r"]);
	}
}
weo["world", "ngdp_r"] = Aggregation(AggregationType.Sum, list);
weo["world", "ngdp_r", "Units"] = "U.S. Dollars";
weo["world", "ngdp_r", "Scale"] = 1000000000;
weo.SaveData(SaveOptions.Update);